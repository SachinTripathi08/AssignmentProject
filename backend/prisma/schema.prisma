// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(cuid())
  email String @unique
  name  String
  avatar String?
  emailJobs EmailJob[]
}

model EmailJob {
  id          String   @id @default(cuid())
  subject     String
  body        String
  recipient   String
  sender      String   // Support multiple senders
  scheduledAt DateTime
  sentAt      DateTime?
  status      String   // 'scheduled', 'sent', 'failed'
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}